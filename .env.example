# =============================================================================
# E-Commerce Backend - Environment Configuration
# Copy to .env and fill in values. Use ENVIRONMENT=development or production.
# =============================================================================

# ---------- Environment ----------
# development = PostgreSQL, debug-friendly. production = MySQL, secure defaults.
ENVIRONMENT=production
# Set to false in production to disable /docs, /redoc and verbose errors
DEBUG=false

# ---------- App ----------
PROJECT_NAME="E-Commerce API"
API_V1_STR=/api/v1
SECRET_KEY=4PVhc0RfQmuXMzKE8ySj0xcX5a54ilkQSBttS1JDOGQyWYzZDp
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ---------- Frontend & API (used in emails, CORS) ----------
FRONTEND_URL=https://sastoho.store
API_URL=https://api.sastoho.store

# ---------- CORS (comma-separated list of allowed origins) ----------
# Development: default below. Production: set to your frontend URL(s) only.
# CORS_ORIGINS=http://localhost:5173,http://localhost:8090,http://127.0.0.1:5173
# Production example:
CORS_ORIGINS=https://sastoho.store,https://www.sastoho.store

# ---------- Cookies (production: use HTTPS and set COOKIE_SECURE=true) ----------
COOKIE_SECURE=false
COOKIE_SAMESITE=lax
COOKIE_HTTPONLY=true

# =============================================================================
# DEVELOPMENT (ENVIRONMENT=development) - PostgreSQL
# =============================================================================
# POSTGRES_USER=your_pg_user
# POSTGRES_PASSWORD=your_pg_password
# POSTGRES_SERVER=localhost
# POSTGRES_PORT=5432
# POSTGRES_DB=ecom_backend

# =============================================================================
# PRODUCTION (ENVIRONMENT=production) - MySQL
# =============================================================================
MYSQL_USER=sastohos_user
MYSQL_PASSWORD=SpringWinter!
MYSQL_SERVER=localhost
MYSQL_PORT=3306
MYSQL_DB=sastohos_ecom

# ---------- Redis (OTP store, cache, Celery broker) ----------
# Option 1: Set REDIS_URL directly (include password if required)
# REDIS_URL=redis://:your_password@127.0.0.1:56041/0
# Option 2: Set host, port, password separately (REDIS_URL is built automatically)
REDIS_HOST=127.0.0.1
REDIS_PORT=56041
REDIS_PASSWORD=wnkFkQnFVpUzBs0OkNb
REDIS_DB=0

# ---------- Email ----------
# SSL/TLS Settings (port 465) - Recommended for secure connections
EMAIL_HOST=mail.sastoho.store
EMAIL_PORT=465
EMAIL_HOST_USER=noreply@sastoho.store
EMAIL_HOST_PASSWORD=your_email_password_here
FROM_EMAIL=noreply@sastoho.store

# Alternative: STARTTLS Settings (port 587) - Uncomment if using STARTTLS instead
# EMAIL_HOST=mail.sastoho.store
# EMAIL_PORT=587
# EMAIL_HOST_USER=noreply@sastoho.store
# EMAIL_HOST_PASSWORD=your_email_password_here
# FROM_EMAIL=noreply@sastoho.store

# ---------- Stripe ----------
STRIPE_API_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# ---------- Optional ----------
UPLOAD_DIR=uploads
LOG_LEVEL=INFO
